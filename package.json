{
  "name": "intl-ts",
  "version": "4.0.4",
  "description": "Internationalization library for TypeScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**",
    "!dist/**/*.spec.*",
    "!dist/**/*.map",
    "doc/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slune-org/intl-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run test && npm run clean && npm run build",
    "test": "npm run test:lint && npm run test:depcheck && npm run test:unit",
    "test:lint": "eslint src/**/*.ts",
    "test:depcheck": "depcheck --ignores='@types/mocha,@types/node'",
    "test:unit": "nyc mocha --require ts-node/register 'src/**/*.spec.ts'",
    "clean": "rimraf dist",
    "build": "npm run build:tsc",
    "build:tsc": "tsc",
    "example": "npm run example:mobx-full && npm run example:redux-lite",
    "example:mobx-full": "NAME=mobx-full npm run :example:name",
    "example:redux-lite": "NAME=redux-lite npm run :example:name",
    ":example:name": "rimraf examples/${NAME} && cp -r examples/content examples/${NAME} && patch -d examples/${NAME} -p1 -i ../${NAME}.diff"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "internationalization",
    "internationalisation",
    "localization",
    "localisation",
    "intl",
    "i18n",
    "library",
    "typescript",
    "message",
    "translate",
    "language"
  ],
  "author": "Slune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slune-org/intl-ts/issues"
  },
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/mocha": "5.2.7",
    "@types/node": "13.5.0",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "chai": "4.2.0",
    "depcheck": "0.9.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "mobx": "5.15.4",
    "mocha": "7.0.1",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.1",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  }
}
