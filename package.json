{
  "name": "intl-ts",
  "version": "4.1.0",
  "description": "Internationalization library for TypeScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/module.mjs"
  },
  "files": [
    "dist/**",
    "!dist/**/*.spec.*",
    "!dist/**/*.map",
    "doc/**"
  ],
  "scripts": {
    "version": "pm-exec run all",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "pm-exec run all",
    "all": "pm-exec run clean && pm-exec run test && pm-exec run build",
    "test": "pm-exec run test:lint && pm-exec run test:dep && pm-exec run test:unit",
    "test:lint": "eslint 'src/**/*.ts'",
    "test:dep": "depcheck",
    "test:unit": "nyc mocha 'src/**/*.spec.ts'",
    "build": "pm-exec run build:main",
    "build:main": "tsc && copyfiles -u 1 src/**/*.{m,c,}js dist",
    "clean": "rimraf dist",
    "example": "pm-exec run example:mobx-full && pm-exec run example:redux-lite",
    "example:mobx-full": "cross-env NAME=mobx-full pm-exec run :example:name",
    "example:redux-lite": "cross-env NAME=redux-lite pm-exec run :example:name",
    ":example:name": "rimraf examples/${NAME} && cp -r examples/content examples/${NAME} && patch -d examples/${NAME} -p1 -i ../${NAME}.diff"
  },
  "keywords": [
    "internationalization",
    "internationalisation",
    "localization",
    "localisation",
    "intl",
    "i18n",
    "library",
    "typescript",
    "message",
    "translate",
    "language"
  ],
  "author": "Slune",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slune-org/intl-ts.git"
  },
  "bugs": {
    "url": "https://github.com/slune-org/intl-ts/issues"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/chai": "4.2.10",
    "@types/mocha": "7.0.2",
    "@types/node": "13.9.0",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "chai": "4.2.0",
    "copyfiles": "2.2.0",
    "cross-env": "7.0.2",
    "depcheck": "0.9.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsdoc": "22.0.1",
    "eslint-plugin-prettier": "3.1.2",
    "mobx": "5.15.4",
    "mocha": "7.1.0",
    "nyc": "15.0.0",
    "pm-exec": "1.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.16",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  }
}
