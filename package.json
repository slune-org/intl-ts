{
  "name": "intl-ts",
  "version": "3.0.0",
  "description": "Internationalization library for TypeScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveyret/intl-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test",
    "build": "npm run clean && npm run tsc",
    "test": "nyc mocha --require ts-node/register --require source-map-support/register 'src/**/*.spec.ts'",
    "tsc": "tsc",
    "lint": "tslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "internationalization",
    "internationalisation",
    "intl",
    "i18n",
    "library",
    "typescript",
    "message",
    "translate",
    "language"
  ],
  "author": "St√©phane Veyret",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sveyret/intl-ts/issues"
  },
  "homepage": "https://github.com/sveyret/intl-ts",
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/mocha": "5.2.2",
    "chai": "4.1.2",
    "mocha": "5.2.0",
    "nyc": "12.0.2",
    "rimraf": "2.6.2",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "typescript": "2.9.1"
  }
}
